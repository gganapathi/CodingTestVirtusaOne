<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtFirstValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:hint="Enter first string"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtSecondValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:hint="Enter second string"
        app:layout_constraintTop_toBottomOf="@+id/edtFirstValue"
        app:layout_constraintStart_toStartOf="parent"  />

    <Button
        android:id="@+id/btnGetDifferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get differences"
        app:layout_constraintTop_toBottomOf="@+id/edtSecondValue"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtOption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Option 1:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGetDifferences" />

    <TextView
        android:id="@+id/txtOption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 2:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOption1" />
</androidx.constraintlayout.widget.ConstraintLayout>